<div class= "row">
  <div class="col-md-4"></div>
  <div class="col-md-4 new">

    <h2>Create New Bug </h2>

    <%= form_for @bug do |f| %>
      <div class="form-group">
        <%= f.label :title %><br/>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description %><br/>
        <%= f.text_field :description, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :type %><br />
        <%= select_tag :type, options_for_select(Bug.types.map {|k, v| [k.humanize.capitalize, v]}), class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :status %><br />
        <%= select_tag :status, options_for_select(Bug.statuses.map {|k, v| [k.humanize.capitalize, v]}), class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :project %><br />
        <%= f.collection_select(:project_id, @projects, :id, :title, {:include_blank => false}, {:class => 'form-control'}) %>
      </div>

      <div class="form-group">
        <%= f.label :deadline %><br/>
        <%= f.date_field :deadline, :id => "datepicker", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit class: 'btn btn-primary' %>
      </div>

    <% end %>
  </div>
</div>
<script>
$('#datepicker').datepicker({format: 'dd/mm/yyyy'});
</script>
